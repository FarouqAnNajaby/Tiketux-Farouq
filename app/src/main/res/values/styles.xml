<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchView">
        <item name="android:layout_height">40dp</item>
        <item name="android:addStatesFromChildren">true</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">1dp</item>
        <item name="strokeColor">@color/input_stroke_color_state</item>
    </style>
    <style name="AppTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="background">@drawable/tab_layout_bg</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/grey_content</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>